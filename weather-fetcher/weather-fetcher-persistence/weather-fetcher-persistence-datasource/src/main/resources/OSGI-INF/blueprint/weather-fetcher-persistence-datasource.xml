<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="dataSource" class="org.mariadb.jdbc.MariaDbDataSource">
        <property name="url" value="jdbc:mariadb://weatherdb:3306/weather"/>
        <!--        For localhost-->
        <!--        <property name="url" value="jdbc:mariadb://localhost:3306/weather"/>-->
        <property name="user" value="root"/>
        <property name="password" value="root"/>
    </bean>

    <service interface="javax.sql.DataSource" ref="dataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="request_datasource"/>
        </service-properties>
    </service>

</blueprint>