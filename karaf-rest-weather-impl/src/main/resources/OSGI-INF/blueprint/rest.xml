<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
             ">


    <jaxrs:server id="weatherRest" address="/weather">
        <jaxrs:serviceBeans>
            <ref component-id="weatherBean" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

    <bean id="weatherServiceBean" class="com.nix.weather.impl.WeatherServiceImpl"/>

    <bean id="weatherBean" class="com.nix.weather.impl.CityWeatherServiceImpl">
        <argument ref="weatherServiceBean"/>
    </bean>

</blueprint>
